{# 
  Template Name: Front Page 
#}

{% extends "layouts/app.twig" %}

{% block title %}{{ site.name }} - {{ site.description }}{% endblock %}

{% block header %}
  {% include "partials/header.twig" %}
{% endblock %}

{% block content %}
  <div class="container mx-auto py-8">
    <div class="flex flex-col md:flex-row md:gap-8">
      <!-- Columna izquierda (66%) - Últimas noticias -->
      <div class="w-full md:w-2/3">
        {% if recent %}
          <section>
            <h2 class="text-2xl font-bold mb-6 text-primary">Últimas Noticias</h2>
            <div class="grid grid-cols-1 gap-6">
              {% for post in recent %}
                <article class="bg-surface p-6 rounded-lg shadow-md flex flex-col md:flex-row border border-border">
                  {% if post.thumbnail %}
                    <div class="md:w-1/4 mb-4 md:mb-0 md:mr-6">
                      <img 
                        src="{{ post.thumbnail.src('medium') }}" 
                        alt="{{ post.thumbnail.alt }}" 
                        class="w-full h-48 md:h-full object-cover rounded"
                      >
                    </div>
                  {% endif %}
                  
                  <div class="{{ post.thumbnail ? 'md:w-3/4' : 'w-full' }}">
                    <h3 class="font-bold text-xl mb-2">
                      <a href="{{ post.link }}" class="text-text hover:text-primary-h">{{ post.title }}</a>
                    </h3>
                    
                    <div class="text-text-subtle text-sm mb-2">{{ post.date | date("F j, Y") }}</div>
                    
                    <p class="text-text">
                      {{ post.excerpt.length(250) }}
                    </p>
                  </div>
                </article>
              {% endfor %}
            </div>
          </section>
        {% endif %}
      </div>
      
      <!-- Columna derecha (33%) - Destacados -->
      <div class="w-full md:w-1/3 mt-8 md:mt-0">
        {% if featured %}
          <section>
            <h2 class="text-2xl font-bold mb-6 text-primary">Destacados</h2>
            
            <div class="grid grid-cols-1 gap-6">
              {% for post in featured %}
                <div class="bg-surface rounded-lg shadow-md overflow-hidden border border-border">
                  {% if post.thumbnail %}
                    <img 
                      src="{{ post.thumbnail.src('medium') }}" 
                      alt="{{ post.thumbnail.alt }}" 
                      class="w-full h-48 object-cover"
                    >
                  {% endif %}
                  
                  <div class="p-4">
                    <h3 class="font-bold text-lg mb-2">
                      <a href="{{ post.link }}" class="text-text hover:text-primary-h">{{ post.title }}</a>
                    </h3>
                    <div class="text-text-subtle text-sm mb-2">{{ post.date | date("F j, Y") }}</div>
                    <p class="text-text">
                      {{ post.excerpt.length(120) }}
                    </p>
                  </div>
                </div>
              {% endfor %}
            </div>
          </section>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}

{% block footer %}
  {% include "partials/footer.twig" %}
{% endblock %}
