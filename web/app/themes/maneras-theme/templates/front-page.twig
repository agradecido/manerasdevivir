{# 
  Template Name: Front Page 
#}

{% extends "layouts/app.twig" %}

{% block title %}{{ site.name }} - {{ site.description }}{% endblock %}

{% block content %}
  <div class="container mx-auto py-8">
    {% if featured %}
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-6">Featured Articles</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {% for post in featured %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden {{ loop.first ? 'md:col-span-2 md:row-span-2' : '' }}">
              {% if post.thumbnail %}
                <img 
                  src="{{ post.thumbnail.src(loop.first ? 'large' : 'medium') }}" 
                  alt="{{ post.thumbnail.alt }}" 
                  class="w-full {{ loop.first ? 'h-96' : 'h-48' }} object-cover"
                >
              {% endif %}
              
              <div class="p-4">
                <h3 class="font-bold {{ loop.first ? 'text-2xl' : 'text-lg' }} mb-2">
                  <a href="{{ post.link }}" class="hover:text-primary">{{ post.title }}</a>
                </h3>
                <div class="text-gray-600 text-sm mb-2">{{ post.date | date("F j, Y") }}</div>
                <p class="text-gray-700">
                  {{ post.preview.length(loop.first ? 200 : 120) }}
                </p>
                <a href="{{ post.link }}" class="inline-block mt-4 text-primary hover:underline">
                  Read more
                </a>
              </div>
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}

    {% if recent %}
      <section>
        <h2 class="text-2xl font-bold mb-6">Latest Articles</h2>
        
        <div class="grid grid-cols-1 gap-6">
          {% for post in recent %}
            <article class="bg-white p-6 rounded-lg shadow-md flex flex-col md:flex-row">
              {% if post.thumbnail %}
                <div class="md:w-1/4 mb-4 md:mb-0 md:mr-6">
                  <img 
                    src="{{ post.thumbnail.src('medium') }}" 
                    alt="{{ post.thumbnail.alt }}" 
                    class="w-full h-48 md:h-full object-cover rounded"
                  >
                </div>
              {% endif %}
              
              <div class="{{ post.thumbnail ? 'md:w-3/4' : 'w-full' }}">
                <h3 class="font-bold text-xl mb-2">
                  <a href="{{ post.link }}" class="hover:text-primary">{{ post.title }}</a>
                </h3>
                
                <div class="text-gray-600 text-sm mb-2">{{ post.date | date("F j, Y") }}</div>
                
                <p class="text-gray-700">
                  {{ post.preview.length(250) }}
                </p>
                
                <a href="{{ post.link }}" class="inline-block mt-4 text-primary hover:underline">
                  Read more
                </a>
              </div>
            </article>
          {% endfor %}
        </div>
      </section>
    {% endif %}
  </div>
{% endblock %}
