{% if featured %}
  <section class="mb-3">
    <h2 class="text-2xl font-bold text-primary mb-3">Pr√≥ximos conciertos</h2>
    
    <div class="grid grid-cols-1 gap-6">
      {% for post in featured %}
        <a href="{{ post.link }}" class="block rounded-lg shadow-md overflow-hidden border border-border hover:shadow-lg transition-shadow duration-200">
          <div class="bg-surface">
            {% if post.thumbnail %}
              {% set responsive_thumb = post.thumbnail|responsive_image %}
              <img 
                src="{{ responsive_thumb.src }}" 
                srcset="{{ responsive_thumb.srcset }}"
                sizes="(max-width: 767px) calc(100vw - 4rem), (min-width: 768px) 30vw"
                alt="{{ responsive_thumb.alt }}" 
                class="w-full h-48 object-cover"
                width="{{ responsive_thumb.width }}" 
                height="{{ responsive_thumb.height }}"
                {{ responsive_thumb.lazy_attr | raw }}
              >
            {% endif %}
            
            <div class="p-4 pb-1">
              <h3 class="font-bold text-lg mb-2 mt-0 text-text hover:text-primary-h">
                {{ post.title }}
              </h3>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </section>
{% endif %}

