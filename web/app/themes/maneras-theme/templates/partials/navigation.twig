{# Menú lateral izquierdo (siempre móvil) #}
<div id="primary-mobile-menu" class="mobile-menu" role="dialog" aria-modal="true" aria-label="Menú principal">
  <div class="mobile-menu__overlay" aria-hidden="true"></div>
  <div class="mobile-menu__panel">
    <button class="mobile-menu__close" aria-label="Cerrar menú">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
    </button>
    {% if primary_menu %}
      <ul class="mobile-menu__list">
        {% for item in primary_menu.items %}
          <li class="{% if item.current %}{% endif %}">
            <a href="{{ item.link }}" class="mobile-menu__link">{{ item.title }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>
