{# 
  Template Name: Single Post 
#}

{% extends "layouts/app.twig" %}

{% block title %}{{ post.title }} - {{ site.name }}{% endblock %}

{% block header %}
  {{ function('maneras_get_header') }}
{% endblock %}

{% block content %}
  <article class="container mx-auto py-8">
    <header class="mb-8">
      <h1 class="text-3xl font-bold mb-2">{{ post.title }}</h1>
      
      <div class="text-gray-600 mb-4">
        {% if post.author %}
          By {{ post.author.name }} 
        {% endif %}
        on {{ post.date | date("F j, Y") }}
      </div>

      {% if post.thumbnail %}
        <img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" class="w-full h-auto rounded-lg">
      {% endif %}
    </header>

    <div class="prose max-w-none">
      {{ post.content }}
    </div>

    {% if comments %}
      <section class="mt-12">
        <h2 class="text-2xl font-bold mb-6">Comments ({{ comments.count }})</h2>
        
        <div class="space-y-6">
          {% for comment in comments.list %}
            <div class="bg-gray-50 p-4 rounded">
              <div class="font-medium">{{ comment.author.name }}</div>
              <div class="text-sm text-gray-600 mb-2">{{ comment.date | date("F j, Y") }}</div>
              <div>{{ comment.content }}</div>
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}

    {% if related %}
      <section class="mt-12">
        <h2 class="text-2xl font-bold mb-6">Related Posts</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {% for related_post in related %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              {% if related_post.thumbnail %}
                <img src="{{ related_post.thumbnail.src('medium') }}" alt="{{ related_post.thumbnail.alt }}" class="w-full h-48 object-cover">
              {% endif %}
              
              <div class="p-4">
                <h3 class="font-bold text-lg mb-2">
                  <a href="{{ related_post.link }}" class="hover:text-primary">{{ related_post.title }}</a>
                </h3>
                <p class="text-gray-700 text-sm">{{ related_post.excerpt.length(120) }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}
  </article>
{% endblock %}

{% block footer %}
  {{ function('maneras_get_footer') }}
{% endblock %}
