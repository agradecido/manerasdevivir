{# 
  Template Name: 404 Not Found 
#}

{% extends "layouts/app.twig" %}

{% block title %}Page Not Found - {{ site.name }}{% endblock %}

{% block content %}
  <div class="container mx-auto py-12 text-center">
    <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md">
      <h1 class="text-5xl font-bold text-gray-800 mb-4">404</h1>
      <h2 class="text-2xl font-medium text-gray-600 mb-6">Page Not Found</h2>
      
      <p class="text-gray-600 mb-8">
        The page you are looking for might have been removed, had its name changed, 
        or is temporarily unavailable.
      </p>
      
      <div class="mb-8">
        <a href="{{ site.url }}" class="px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors">
          Return to Homepage
        </a>
      </div>
      
      <form action="{{ site.url }}" method="get" class="max-w-md mx-auto mb-12">
        <div class="flex">
          <input 
            type="text" 
            name="s" 
            class="flex-1 px-4 py-2 border border-gray-300 rounded-l focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            placeholder="Search..."
          >
          <button type="submit" class="bg-primary text-white px-6 py-2 rounded-r hover:bg-primary-dark">
            Search
          </button>
        </div>
      </form>
    </div>
    
    {% if recent_posts %}
      <div class="mt-12">
        <h2 class="text-2xl font-bold mb-6">Recent Posts</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {% for post in recent_posts %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              {% if post.thumbnail %}
                <img src="{{ post.thumbnail.src('medium') }}" alt="{{ post.thumbnail.alt }}" class="w-full h-48 object-cover">
              {% endif %}
              
              <div class="p-4">
                <h3 class="font-bold text-lg mb-2">
                  <a href="{{ post.link }}" class="hover:text-primary">{{ post.title }}</a>
                </h3>
                <p class="text-gray-700 text-sm">{{ post.preview.length(120) }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
{% endblock %}
