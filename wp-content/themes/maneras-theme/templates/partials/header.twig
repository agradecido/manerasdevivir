<div class="site-header">
  <div class="site-header__content flex items-center">
    <!-- Left section for mobile menu -->
    <div class="flex-1 flex justify-start">
      <div class="md:hidden">
        <button class="mobile-menu-toggle">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Center section for logo -->
    <div class="flex justify-center">
      <a href="{{ site.url }}" class="site-logo">
        <img src="{{ theme.link }}/assets/dist/images/logo-1996-xl.png" alt="{{ site.name }}" class="logo-light" />
        <img src="{{ theme.link }}/assets/dist/images/logo-1996-dark-xl.png" alt="{{ site.name }}" class="logo-dark" />
        <span class="sr-only">{{ site.name }}</span>
      </a>
    </div>

    <!-- Right section for desktop navigation and theme toggle -->
    <div class="flex-1 flex justify-end">
      {# This div is now empty or could hold future right-aligned elements if any, but not the primary nav #}
    </div>
  </div>

  <!-- Desktop navigation -->
  <nav class="hidden md:block mt-4"> {# Added mt-4 for spacing, can be adjusted in next step #}
    {% if primary_menu %}
      <ul class="flex space-x-6 items-center justify-center"> {# Added justify-center for centering the ul items #}
        {% for item in primary_menu.items %}
          <li class="{% if item.current %}text-primary font-bold{% endif %}">
            <a href="{{ item.link }}" class="hover:text-primary transition">{{ item.title }}</a>
          </li>
        {% endfor %}
        <li>
          <button id="theme-toggle" class="hover:text-primary transition pt-2" aria-label="Cambiar tema">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
            </svg>
          </button>
        </li>
      </ul>
    {% endif %}
  </nav>
</div>

<!-- Mobile menu -->
<div class="mobile-menu hidden md:hidden">
  <div class="container mx-auto px-4 py-3">
    {% if primary_menu %}
      <ul class="space-y-2">
        {% for item in primary_menu.items %}
          <li class="{% if item.current %}font-bold{% endif %}">
            <a href="{{ item.link }}" class="block py-2 hover:text-primary transition">{{ item.title }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>
